<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="LaunchPadConfigurator.Views.UIElements.AddAppDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LaunchPadConfigurator.Views.UIElements"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical">
        
        <TextBlock Margin="0,10,0,5">App name</TextBlock>
        <TextBox x:Name="appNameInput"/>
        <TextBlock Name="appNameInputError" Visibility="Collapsed" FontSize="12" Foreground="#cf7f88" Tag="Error">App name cannot be empty.</TextBlock>
        
        <TextBlock Margin="0,10,0,5">App executable / shortcut</TextBlock>
        <Button x:Name="appExeButton" Content="Executable file" Click="ExePathProvided"/>
        <TextBlock Name="appExeInputError" Visibility="Collapsed" FontSize="12" Foreground="#cf7f88" Tag="Error">App path cannot be empty.</TextBlock>
            
        <TextBlock Margin="0,10,0,5">App icon (Leave empty for autofill)</TextBlock>
        <Button x:Name="appIconButton" Content="Icon file" Click="IconPathProvided"/>

    </StackPanel>
</UserControl>
