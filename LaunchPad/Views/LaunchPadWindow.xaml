<Window x:Class="LaunchPad.LaunchPadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LaunchPad"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Deactivated="Window_Deactivated"
        Topmost="True">
    <Window.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard Storyboard="{StaticResource WindowLaunchAnimation}" />
        </EventTrigger>
    </Window.Triggers>
    <Window.RenderTransform>
        <ScaleTransform ScaleX="1" ScaleY="1" />
    </Window.RenderTransform>
    <Window.RenderTransformOrigin>
        <Point>0.5, 0.5</Point>
    </Window.RenderTransformOrigin>
    <Border CornerRadius="25" Background="{StaticResource LaunchPadBackground}" Padding="10" MinWidth="100" MinHeight="100" x:Name="launchPadRoot">
        <StackPanel Orientation="Horizontal" Name="appContainer">

        </StackPanel>
    </Border>

</Window>
