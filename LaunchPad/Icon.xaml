<UserControl x:Class="LaunchPad.Icon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LaunchPad"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="80">
    <Border  CornerRadius="15" Width="80" Height="80" Name="iconContainer" Background="#444444" Padding="5">
        <Border CornerRadius="10" Width="auto" Height="auto">
            <Border.Background>
                <VisualBrush>
                    <VisualBrush.Visual>
                        <Grid>
                            <Image Name="iconBitmap" Width="auto" Height="auto" Stretch="UniformToFill" />
                        </Grid>
                    </VisualBrush.Visual>
                </VisualBrush>
            </Border.Background>
        </Border>
    </Border>


</UserControl>
