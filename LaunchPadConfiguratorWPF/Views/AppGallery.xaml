<Window x:Class="LaunchPadConfiguratorWPF.Views.AppGallery"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LaunchPadConfiguratorWPF.Views"
        mc:Ignorable="d"
        Title="AppGallery" WindowStyle="None" WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" Background="Transparent">
    <Border Background="{StaticResource WindowBackground}" BorderBrush="{StaticResource WindowBorder}" BorderThickness="1" CornerRadius="8" 
            Width="600" Height="400" Name="Container" Padding="20">
        <ScrollViewer>
            <WrapPanel Name="AppContainer">

            </WrapPanel>
        </ScrollViewer>

    </Border>
</Window>
