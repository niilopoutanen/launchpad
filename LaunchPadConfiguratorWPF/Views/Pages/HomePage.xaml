<Page x:Class="LaunchPadConfiguratorWPF.Views.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LaunchPadConfiguratorWPF.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage" >

    <ScrollViewer>
        <StackPanel Orientation="Vertical">
            <StackPanel Margin="0,0,10,0" Orientation="Horizontal">
                <Image Source="/Resources/Icons/LaunchPad.ico" Margin="0,0,30,0" Height="150"/>
                <StackPanel Orientation="Vertical">
                    <TextBlock Grid.Column="0" VerticalAlignment="Center" FontSize="40" FontWeight="Bold">LaunchPad</TextBlock>
                    <TextBlock Grid.Column="0" VerticalAlignment="Center" 
                           x:Name="versionNumber" FontSize="20">v1.0.0</TextBlock>
                </StackPanel>
            </StackPanel>

            <TextBlock Margin="0,10,0,5" Foreground="{StaticResource TextSecondary}">Status</TextBlock>
            <Border Style="{StaticResource SettingsCard}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" x:Name="launchPadStatus" VerticalAlignment="Center"/>

                    <Button Grid.Column="1" x:Name="launchPadManageButton">Start LaunchPad</Button>
                </Grid>
            </Border>

            <TextBlock Margin="0,10,0,5" Foreground="{StaticResource TextSecondary}">Activation shortcut</TextBlock>

            <Border Style="{StaticResource SettingsCard}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <ComboBox Name="ModifierComboBox"/>

                        <TextBlock VerticalAlignment="Center" Margin="5">+</TextBlock>
                        <ToggleButton Name="KeyButton" Margin="0,0,10,0">Tab</ToggleButton>
                        <TextBlock Name="RestartAlert" VerticalAlignment="Center" 
                               
                               Text="Modifying the hotkey requires restarting LaunchPad."/>

                    </StackPanel>

                    <Button Grid.Column="1">Restore defaults</Button>
                </Grid>

            </Border>

            <StackPanel Margin="0,10,0,10" Orientation="Horizontal">
                <Canvas Height="24" Width="24" Margin="0,0,10,0">
