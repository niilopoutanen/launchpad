<Window x:Class="LaunchPadConfiguratorWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LaunchPadConfiguratorWPF"
        mc:Ignorable="d"
        MinHeight="200"
        MinWidth="400"
        MaxWidth="1600"
        MaxHeight="800"
        Title="MainWindow" Height="450" Width="800" ResizeMode="CanResizeWithGrip"
        WindowStyle="None" Background="Transparent" AllowsTransparency="True">
    <Window.Template>
        <ControlTemplate TargetType="Window">
            <Grid>
                <!-- Content Presenter -->
                <ContentPresenter />

                <!-- Resize Thumb -->
                <Thumb x:Name="ResizeThumb" 
                       Width="16" 
                       Height="16" 
                       HorizontalAlignment="Right" 
                       VerticalAlignment="Bottom"
                       Margin="-6"
                       Cursor="SizeNWSE" 
                       DragDelta="ResizeThumb_DragDelta" />
            </Grid>
        </ControlTemplate>
    </Window.Template>
    <Border Background="#1e1e1e" CornerRadius="8" ClipToBounds="True" BorderBrush="#3a3a3a" BorderThickness="1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0"  Name="SideBar" Background="#282828" Width="200" CornerRadius="8,0,0,8">
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" Margin="10,10,10,0">
                        <Border Width="10" Height="10" Background="Blue"/>
                        <TextBlock Foreground="White">Home</TextBlock>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10,10,10,0">
                        <TextBlock Foreground="White">General</TextBlock>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10,10,10,0">
                        <TextBlock Foreground="White">Apps</TextBlock>
                    </StackPanel>


                    <StackPanel Orientation="Horizontal" Margin="10,10,10,0">
                        <TextBlock Foreground="White">Widgets</TextBlock>
                    </StackPanel>
                </StackPanel>

            </Border>

            <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Stretch">
                <Grid Height="30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Foreground="White" VerticalAlignment="Center" Name="AppTitleBar" Padding="5">Window name</TextBlock>
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Border Name="Minimize" Width="20" Height="20" Margin="10,0,10,0" Background="Transparent">
                            <Path Width="15" Height="15" Stretch="Uniform" Data="M1 1H19" Stroke="White" StrokeThickness="2" StrokeEndLineCap="Round" StrokeStartLineCap="Round"/>
                        </Border>
                        <Border Name="Close" Width="20" Height="20" Margin="0,0,10,0" Background="Transparent">
                            <Path Width="15" Stretch="Uniform" Height="15" Stroke="#FFFFFF" StrokeThickness="2" StrokeEndLineCap="Round" StrokeStartLineCap="Round"  Data="M1 1L9.99987 9.5M18.4999 18L9.99987 9.5M9.99987 9.5L1.49987 18M9.99987 9.5L18.4999 1"/>
                        </Border>
                    </StackPanel>
                </Grid>
                <Frame/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
