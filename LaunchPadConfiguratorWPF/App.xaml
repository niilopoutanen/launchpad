<Application x:Class="LaunchPadConfiguratorWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LaunchPadConfiguratorWPF"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <FontFamily x:Key="Inter">/Resources/Fonts/#Inter</FontFamily>

        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="FontFamily" Value="{StaticResource Inter}"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
        </Style>

        <SolidColorBrush x:Key="TextSecondary" Color="#E6E6E6"/>
        
        <SolidColorBrush x:Key="WindowBackground" Color="#202020"/>
        <SolidColorBrush x:Key="WindowForeGround" Color="#292929"/>
        <SolidColorBrush x:Key="WindowBorder" Color="#3A3A3A"/>

        <SolidColorBrush x:Key="ContainerBackground" Color="#2b2b2b"/>

    </Application.Resources>
</Application>
